<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @blog.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @blog.description %>
</p>

<p>
  <%= render "comments/form", blog: @blog %>
</p>

<h4 align="center">All Comments</h4>
<table class="table table-primay">
  <thead>
    <tr>
      <th>All User Comment</th>
    </tr>
  </thead>
  <tbody >
    <% @comments.each do |comment|%>
    <tr>
      <td><%= comment.body %></td>
    </tr>
    <%end%>
  </tbody>
</table>

<%= link_to "Back", root_path%>

